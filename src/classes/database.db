-- Spiele

CREATE TABLE [IF NOT EXISTS] games (
	gameID INT NOT NULL PRIMARY KEY AUTOINCREMENT,
	gameName NVARCHAR(MAX) NOT NULL,
	description NVARCHAR(MAX) NOT NULL,
	categorieID INT,
	releaseDate DATE,
	price DOUBLE,
	review INT,
	wishlited BOOLEAN,
	favored BOOLEAN,
	purchaseDate DATETIME,
	deleted BOOLEAN
) [WITHOUT ROWID];

-- Kategorien

CREATE TABLE [IF NOT EXISTS] categories (
	categorieID INT NOT NULL PRIMARY KEY AUTOINCREMENT,
	categoryName NVARCHAR(MAX) NOT NULL,
	deleted BOOLEAN
) [WITHOUT ROWID];

-- Bilder

CREATE TABLE [IF NOT EXISTS] images (
	imageID INT NOT NULL PRIMARY KEY AUTOINCREMENT,
	imageName NVARCHAR(MAX) NOT NULL,
	gameID INT NOT NULL,
	deleted BOOLEAN
) [WITHOUT ROWID];